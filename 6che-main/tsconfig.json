{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["types/*"],
      "@/components/*": ["components/*"],
      "@/supabase/*": ["supabase/*"],
      "@/utils/*": ["utils/*"],
      "@/zustand/*": ["zustand/*"],
      "@/assets/*": ["src/assets/*"]
    },
    "target": "es6"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(providers)/(root)/(post)/detail/[id]/_document.js"
  ],
  "exclude": ["node_modules"]
}
